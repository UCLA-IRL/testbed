global_prefix: "{{ ndnNetwork }}"
port: 8777
secret: "{{ ROOT_CA_SECRET }}"

hosts:
  {% for name, data in hostvars.items() %}
  {{ name }}:
    cert_file: "/config/cert-store/site-ca.{{ data['inventory_hostname'] }}.ndncert"
    ip_address: "{{ data['host_ip'] }}"
    prefix: "{{ data['default_prefix'] }}"
  {% endfor %}